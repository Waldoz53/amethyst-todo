{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "fs:allow-appdata-read",
    "fs:allow-appdata-write",
    "updater:allow-check",
    "updater:allow-download-and-install",
    "process:allow-exit",
    "process:allow-restart"
  ]
}